{
  "name": "node-starter",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "db:create:test": "NODE_ENV=test sequelize-cli db:create",
    "db:create:dev": "NODE_ENV=development sequelize-cli db:create",
    "db:migrate:dev": "NODE_ENV=development sequelize-cli db:migrate",
    "db:seeds:dev": "NODE_ENV=development sequelize-cli db:seed:all",
    "db:create": "NODE_ENV=production sequelize-cli db:create",
    "db:migrate": "NODE_ENV=production sequelize-cli db:migrate",
    "db:seeds": "NODE_ENV=production sequelize-cli db:seed:all",
    "start": "standard && babel-node app.js",
    "dev": "NODE_ENV=development nodemon --exec npm run start",
    "prod": "NODE_ENV=production npm run start",
    "pm2:start:dev": "pm2 start \"npm run dev\" --name node-starter-restfull-api-dev",
    "pm2:restart:dev": "pm2 restart node-starter-restfull-api-dev --update-env",
    "pm2:stop:dev": "pm2 delete node-starter-restfull-api-dev",
    "pm2:start": "pm2 start \"npm run prod\" --name node-starter-restfull-api",
    "pm2:restart": "pm2 restart node-starter-restfull-api --update-env",
    "pm2:stop": "pm2 delete node-starter-restfull-api"
  },
  "author": "Hasan Sas",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "express-fileupload": "^1.3.1",
    "express-validator": "^6.14.0",
    "glob": "^7.2.0",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^8.5.1",
    "jwt-redis": "^7.0.3",
    "moment": "^2.29.2",
    "multer": "^1.4.4",
    "node-xlsx": "^0.21.0",
    "nodemailer": "^6.7.3",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.5.1",
    "sequelize": "^6.17.0",
    "socket.io": "^4.4.1",
    "url-file-size": "^1.0.5-1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.12",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.0",
    "nodemon": "^2.0.15",
    "sequelize-cli": "^6.4.1",
    "standard": "^16.0.4"
  },
  "standard": {
    "globals": [
      "ENV",
      "DB",
      "ROOT_DIR",
      "HTTP_RESPONSE",
      "SEND_RESPONSE",
      "AUTH",
      "EXPRESS_VALIDATOR",
      "IO",
      "WA_CLIENTS"
    ]
  }
